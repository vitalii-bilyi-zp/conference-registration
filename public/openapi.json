  "components": {
    "schemas": {
      "Country": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Ukraine (Україна)"
          },
          "iso2": {
            "type": "string",
            "example": "UA"
          },
          "dial_code": {
            "type": "string",
            "example": "380"
          },
          "phone_mask": {
            "type": "string",
            "example": "+380 ## ### ####"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "firstname": {
            "type": "string",
            "example": "John"
          },
          "lastname": {
            "type": "string",
            "example": "James"
          },
          "type": {
            "type": "string",
            "enum": [
              "admin",
              "listener",
              "announcer"
            ]
          },
          "birthdate": {
            "type": "string",
            "format": "date"
          },
          "country": {
            "$ref": "#/components/schemas/Country"
          },
          "phone": {
            "type": "string",
            "example": "+1 (555) 555-5555"
          },
          "email": {
            "type": "string",
            "example": "john@email.com"
          },
          "email_verified_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "conference_ids": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          },
          "access_token": {
            "type": "string"
          },
          "token_type": {
            "type": "string",
            "example": "Bearer"
          }
        }
      },
      "Conference": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "title": {
            "type": "string",
            "example": "Conference title"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "latitude": {
            "type": "number",
            "minimum": -90,
            "maximum": 90
          },
          "longitude": {
            "type": "number",
            "minimum": -180,
            "maximum": 180
          },
          "country_id": {
            "type": "integer",
            "example": 1
          },
          "country": {
            "$ref": "#/components/schemas/Country"
          }
        }
      },
      "RegisterDto": {
        "type": "object",
        "properties": {
          "firstname": {
            "type": "string",
            "example": "John"
          },
          "lastname": {
            "type": "string",
            "example": "James"
          },
          "type": {
            "type": "string",
            "enum": [
              "listener",
              "announcer"
            ]
          },
          "birthdate": {
            "type": "string",
            "format": "date"
          },
          "country_id": {
            "type": "integer",
            "example": 1
          },
          "phone": {
            "type": "string",
            "example": "+1 (555) 555-5555"
          },
          "email": {
            "type": "string",
            "example": "john@email.com"
          },
          "password": {
            "type": "string",
            "example": "12345678",
            "minLength": 8
          }
        },
        "required": [
          "firstname",
          "lastname",
          "type",
          "birthdate",
          "country_id",
          "phone",
          "email",
          "password"
        ]
      },
      "LoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "john@email.com"
          },
          "password": {
            "type": "string",
            "example": "12345678",
            "minLength": 8
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "ConferencesStoreDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Conference title"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "latitude": {
            "type": "number",
            "minimum": -90,
            "maximum": 90
          },
          "longitude": {
            "type": "number",
            "minimum": -180,
            "maximum": 180
          },
          "country_id": {
            "type": "integer",
            "example": 1
          }
        },
        "required": [
          "title",
          "date",
          "latitude",
          "longitude",
          "country_id"
        ]
      },
      "ConferencesUpdateDto": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Conference title"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "latitude": {
            "type": "number",
            "minimum": -90,
            "maximum": 90
          },
          "longitude": {
            "type": "number",
            "minimum": -180,
            "maximum": 180
          },
          "country_id": {
            "type": "integer",
            "example": 1
          }
        }
      },
      "UserResponse": {
        "type": "object",
        "properties": {
          "user": {
            "$ref": "#/components/schemas/User"
          }
        }
      },
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          }
        }
      },
      "ConferencesIndexResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Conference"
            }
          },
          "current_page": {
            "type": "integer",
            "example": 1
          },
          "last_page": {
            "type": "integer",
            "example": 1
          },
          "per_page": {
            "type": "integer",
            "example": 15
          },
          "total": {
            "type": "integer",
            "example": 1
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}